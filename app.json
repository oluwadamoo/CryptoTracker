{
  "expo": {
    "name": "Crypto Tracker",
    "slug": "CryptoTracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#29303A"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cryptoTracker"
    },
    "android": {
      "package": "com.cryptotracker",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#29303A"
      }
    },
    "web": {
      "favicon": "./assets/icon.png"
    }
  }
}
